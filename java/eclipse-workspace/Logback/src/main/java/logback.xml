<configuration debug="true" scan="true" scanperiod="30 seconds">
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
			</pattern>
		</encoder>
	</appender>
	<root lever="debug">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>